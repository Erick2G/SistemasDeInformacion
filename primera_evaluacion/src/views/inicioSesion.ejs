<%- include ("headers/header_inicio"); %>
<div class ="container">
	<div class="row"></div>
	<div class="row mt-5">
		<div class="col-sm-auto"></div>
		<div class ="col md-0">
			<div class="card">
				<legend class="card-header">
					Ingresa tus datos
				</legend>
				<div class="card-body">
					<form action="inicioSesion" method ="POST">
						<div class="form-check">
					        <label class="form-check-label">
					        <input id="checkUs" name ="checkUs" class="form-check-input" type="checkbox" value="">
					        Usuario
					        </label>
					    </div>
					    <div class="form-check">
					        <label class="form-check-label">
					        <input id="checkAdmin" name ="checkAdmin"class="form-check-input" type="checkbox" value="">
					        Admin
					        </label>
					    </div>
						<div class="form-group">
							<input type="text" name="nombre" placeholder="Names" maxsize="50" class="form-control">
						</div>
						<div class="form-group">
							<input type="text" name="password" placeholder="Password" class="form-control">
						</div>
						<button type= "submit" class="btn btn-primary">
							Sign in
						</button>
					</form>
				</div>
			</div>
		</div>
		<div class="col">
			<!-- Para error en datos ingreados :p -->
			<% if(locals.error_message) { %>
			<div class="card border-info mb-3" style="max-width: 40rem;">
			  	<div class="card-header">Error - no existe el usuario</div>
			 	 <div class="card-body">
			    	<h4 class="card-title">llena bien los campos</h4>
			  	 	<p class="card-text">No debe haber campos vacíos y sólo se puede seleccionar un rol (usuaro o administrador)</p>
			  	</div>
			</div>
			<% } %>
		</div>
	</div>
</div>

<%- include ("headers/footer"); %>

